{
    "name": "pixelant/crowdfunding",
    "type": "typo3-cms-extension",
    "description": "An extension for Crowdfunding",
    "author": [],
    "require": {
        "php": "^7.0",
        "typo3/cms": "~8.7",
        "stripe/stripe-php": "4.*"
    },
    "require-dev": {
        "nimut/testing-framework": "^1.0",
        "squizlabs/php_codesniffer": "2.*",
        "phpunit/phpunit": "^5.4",
        "mikey179/vfsStream": "~1.6.0"
    },
    "replace": {
        "crowdfunding": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Pixelant\\Crowdfunding\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pixelant\\Crowdfunding\\Tests\\": "Tests/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
            "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
        }
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "preferred-install": {
            "typo3/cms": "source"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/crowdfunding ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/crowdfunding"
        ],
        "php:codesniffer": ".Build/bin/phpcs --standard=PSR2 Classes/ Tests/ *.php",
        "php:unittests": "export TYPO3_PATH_WEB=$PWD/.Build/Web && .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/ --whitelist=Classes --coverage-html code-coverage/unit",
        "php:functionaltests": "export typo3DatabaseName='crowdfunding' typo3DatabaseUsername='crowdfunding' typo3DatabasePassword='crowdfunding1234' typo3DatabaseHost='localhost' TYPO3_PATH_WEB=$PWD/.Build/Web && .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional/ --whitelist=Classes --coverage-html code-coverage/functional",
        "php:wip": "export typo3DatabaseName='crowdfunding' typo3DatabaseUsername='crowdfunding' typo3DatabasePassword='crowdfunding1234' typo3DatabaseHost='localhost' TYPO3_PATH_WEB=$PWD/.Build/Web && .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional/Utility/ --whitelist=Classes --coverage-html code-coverage/functional"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}